<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1 class="text-center"><%= @garden.name %></h1>
  </div>
  <div class="banner-buttons">
    <%= link_to 'Edit', edit_garden_path(@garden), class: "btn btn-success" %>
    <%= link_to 'Back', gardens_path, class: "btn btn-success" %>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>');">
          <%= plant.name %>
          <%= link_to '<i class="fas fa-trash"></i>'.html_safe, plant_path(plant), method: :delete, data: {confirm: "Are you sure?"}, class: "delete-button" %>
      </div>
    <% end %>
  </div>




<div class="border-top">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Add a new plant</h2>
        <%= simple_form_for [@garden, @plant] do |f| %>
          <%= f.input :name %>
          <%= f.input :image_url %>
          <%= f.submit class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>
</div>
